<%-include("partials/header.ejs")%>
<div class="full">
<div class="container">
  <h1>My Blog</h1>
  <a id="newPostBtn" href="/Create">New Post</a>
  <ul id="postsList">

<%posts.forEach(post => {%>
  <li>
    <h2>
      <%= post.title%>
    </h2>
    <small>
      <%=post.date%>
    </small>
    <p><%=post.content%></p>
    <small>By: <%=post.author%></small>
    <a class="edit" href="/edit/<%= post.id %>">Edit</a>
    <a class="delete" href="/delete/<%= post.id %>">Delete</a>
  </li>
  
<%}); %>
</ul>
</div>
</div>

      

